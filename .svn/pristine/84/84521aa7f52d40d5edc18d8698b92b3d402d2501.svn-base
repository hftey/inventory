/* ---------->>> jtip <<<---------------------------------------------------------------*/

#JT_arrow_left{
	background-image: url(/js/jquery/jtip/images/jtip_left.gif);
	background-repeat: no-repeat;
	background-position: left top;
	position: absolute;
	left: -12px;
	top: -3px;
	z-index: 101;
	height: 23px;
	width: 11px;
}

#JT_arrow_right{
	background-image: url(/js/jquery/jtip/images/jtip_right.gif);
	background-repeat: no-repeat;
	background-position: right top;
	position: absolute;
	z-index: 101;
	height: 23px;
	width: 11px;
}

#JT {
	position: absolute;
	z-index: 8000;
	border: 2px solid #3f66a8;
	background-color: #fff;
	
}

#JT_content{
	padding:5px 5px 5px 5px;
	color:#333333;
    font-size: 11px;
	font-family: Arial, Helvetica, sans-serif;
}

.JT_loader{
	background-image: url(/js/jquery/jtip/images/jtip_loader.gif);
	background-repeat: no-repeat;
	background-position: center center;
	width:100%;
	height:5px;
}

#JT_close_left{
    font-size: 13px;
	font-family: Arial, Helvetica, sans-serif;
	background-color: #3f66a8;
	color: #ffffff;
	text-align: left;
	padding-left: 8px;
	padding-bottom: 5px;
	font-weight:bold;
}

#JT_close_right{
    font-size: 13px;
	font-family: Arial, Helvetica, sans-serif;
	background-color: #3f66a8;
	color: #ffffff;
	text-align: left;
	padding-left: 8px;
	padding-bottom: 5px;
	font-weight:bold;
}

#JT_content p{
    margin:1px 0;
	padding: 5px;
}

#JT_content img{
	border: 1px solid #3f66a8;
}

.jTip{
    cursor:pointer;
}

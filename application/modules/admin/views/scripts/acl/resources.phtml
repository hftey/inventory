<script language='Javascript'>

function OnDeleteResources(resources_id){
	$.prompt(
		"<?=$this->translate->_('Are you sure you want to remove the resources?')?>",{
		buttons: { Ok: true, Cancel: false },
		submit:function(e,v,m,f){
					if(v){
						document.location='/admin/acl/resources/remove_resources/'+resources_id;
					}
				  }
	});
}



